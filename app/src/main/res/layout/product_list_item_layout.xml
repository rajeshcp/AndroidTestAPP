<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_margin="@dimen/drawable_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <android.support.v7.widget.AppCompatImageView
        android:src="@mipmap/ic_launcher"
        android:id="@+id/product_image"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <android.support.v7.widget.AppCompatTextView
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textSize_medium"
        android:padding="@dimen/drawable_padding"
        android:id="@+id/product_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatTextView
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/textSize_xsmall"
        android:paddingLeft="@dimen/drawable_padding"
        android:paddingRight="@dimen/drawable_padding"
        android:id="@+id/product_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View android:layout_margin="@dimen/drawable_padding"
        style="@style/DividerStyleHorizontal"/>

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.AppCompatTextView
                android:textSize="@dimen/textSize_medium"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/drawable_padding"
                android:gravity="center"
                android:textColor="@android:color/darker_gray"
                android:text="@string/share"
                android:drawableLeft="@drawable/ic_share_black_24dp"
                android:background="?attr/selectableItemBackground"
                android:id="@+id/share_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>


        <View
            android:id="@+id/divider"
            android:layout_centerInParent="true"
            style="@style/DividerStyleVertical"/>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.AppCompatTextView
                android:textSize="@dimen/textSize_medium"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/drawable_padding"
                android:gravity="center"
                android:textColor="@android:color/darker_gray"
                android:text="@string/favorite"
                android:drawableLeft="@drawable/ic_star_black_24dp"
                android:background="?attr/selectableItemBackground"
                android:id="@+id/favorite_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </RelativeLayout>



    </LinearLayout>

</LinearLayout>